# Production Environment Configuration Template
# Copy to .env and fill in actual values

# Application
NODE_ENV=production
PORT=5000
INSTANCE_ID=0

# Database
DATABASE_URL=postgresql://user:password@host:port/database
PGHOST=your-postgres-host
PGPORT=5432
PGUSER=your-postgres-user
PGPASSWORD=your-postgres-password
PGDATABASE=your-database-name

# Blockchain Configuration
BASE_RPC_URL=https://mainnet.base.org
CALCULATOR_PRIVATE_KEY=your-calculator-private-key
BACKUP_RPC_URL=https://api.developer.coinbase.com/rpc/v1/base/your-key

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
DEXSCREENER_API_KEY=your-dexscreener-api-key

# Security
SESSION_SECRET=your-super-secure-session-secret
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true
SENTRY_DSN=your-sentry-dsn
HEALTH_CHECK_INTERVAL=30000

# Performance
CACHE_TTL=300
MAX_CONNECTIONS=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Domain Configuration
DOMAIN=liq.kilt.io
ALLOWED_ORIGINS=https://liq.kilt.io,https://app.kilt.io
CORS_CREDENTIALS=true

# SSL Configuration (if handling SSL in Node.js)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
FORCE_HTTPS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret